{
  "name": "the-platform-enhanced",
  "version": "2.0.0",
  "description": "Enhanced secure messaging platform with real Kyber post-quantum encryption and data-at-rest encryption",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf data/*.enc",
    "reset": "rm -rf data/ && mkdir data",
    "health": "curl -s http://localhost:3000/health | jq",
    "stats": "curl -s http://localhost:3000/stats | jq"
  },
  "keywords": [
    "messaging",
    "encryption",
    "kyber",
    "post-quantum",
    "websocket",
    "secure",
    "zero-knowledge",
    "end-to-end-encryption"
  ],
  "author": "Prakhar Solanki",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/the-platform-enhanced.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/the-platform-enhanced/issues"
  },
  "homepage": "https://github.com/your-username/the-platform-enhanced#readme",
  "deployment": {
    "render": {
      "buildCommand": "npm install",
      "startCommand": "npm start",
      "environment": "node",
      "healthCheckPath": "/health"
    }
  },
  "security": {
    "dataEncryption": "AES-256-GCM",
    "keyDerivation": "PBKDF2-SHA256",
    "postQuantum": "Kyber-768-Compatible",
    "zeroKnowledge": true
  }
}
